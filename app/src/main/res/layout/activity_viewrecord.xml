<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.android.kumaratul.hope.Viewrecord">
    <Button
        android:id="@+id/button18"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VIEW PROFILE"
        tools:layout_editor_absoluteX="87dp"
        tools:layout_editor_absoluteY="-6dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button19"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update PROFILE"
        tools:layout_editor_absoluteX="60dp"
        tools:layout_editor_absoluteY="100dp"
        android:layout_below="@+id/button18"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp" />

    <Button
        android:id="@+id/button20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Delete PROFILE"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:layout_editor_absoluteY="167dp"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/button18"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:text=""
        android:layout_below="@+id/button20"
        android:layout_above="@+id/textView9"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WANT TO HELP"
        android:layout_marginBottom="57dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WANT HELP"
        android:layout_marginStart="15dp"
        android:layout_alignBaseline="@+id/button13"
        android:layout_alignBottom="@+id/button13"
        android:layout_alignStart="@+id/textView5" />

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView10"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="160dp"
        android:layout_height="30dp"
        android:text="TYPES OF PROBLEM:-"
        android:background="@color/colorAccent"
        android:layout_above="@+id/spinner2"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="260dp"
        android:layout_height="40dp"
        android:text=""
        android:layout_above="@+id/button13"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/spinner2" />

</RelativeLayout>
